{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "make",
            "args": ["-C", "src", "all"],
            "group": {
                "kind": "build",
                "isDefault": 1
            },
            "problemMatcher": []
        },
        {
            "label": "Build Project For Debug",
            "type": "shell",
            "command": "make",
            "args": ["-C", "src", "debug"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Program with Input",
            "type": "shell",
            "command": "${workspaceFolder}/build/build/keyfilter", // Replace with the actual path to your program
            "args": ["<", "test/addresses.txt"], // Use "<" to specify input redirection
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}